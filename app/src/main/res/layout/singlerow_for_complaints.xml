<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/citizenText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Citizen Name"
            android:textColor="#888585"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/complaintNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/citizenText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="Complaint"
            android:textColor="#496DAC"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/areaNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/complaintNameText"
            android:layout_marginLeft="5dp"
            android:text="Area Name"
            android:textColor="#67372B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewFieldName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/citizenText"
            android:text="Field Name"
            android:textAlignment="textEnd"
            android:textColor="#31C52D"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>